<% layout('/layouts/boilerplate') %>

<h1 class="text-center">All Articles</h1>

<% if (articles.length) { %>
    <section class="d-flex flex-column card shadow p-3 mb-3 bg-body rounded">
        <% for( let index = 0; index < articles.length; index++ ) { %>
            <ol class="d-flex flex-row justify-content-center align-items-center">
                <li class="m-3"><a href="/articles/<%= articles[index]._id%>" class="description">
                    <%= articles[index].title%>
                </a></li>
                <a href="/admin/articles/edit/<%= articles[index]._id%>" class="btn btn-primary m-3 text-white" id="edit<%= index %>">Edit</a>
                <form action="/admin/articles/delete/<%= articles[index]._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger m-3">Delete</button>
                </form>
            </ol>
        <% } %>
    </section>
<% } else { %>
    <section class="d-flex flex-column card shadow p-3 mb-3 bg-body rounded">
        <div class="description text-center">
            You have not written any articles yet.
        </div>
    </section>
    <% } %>